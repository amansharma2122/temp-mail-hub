# Main .htaccess for Self-Hosted Temp Email
# Robust routing for subdomain/subdirectory installs

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # =========================================================================
    # PREVENT REDIRECT LOOPS
    # =========================================================================
    # If already redirected, stop processing
    RewriteCond %{ENV:REDIRECT_STATUS} ^$
    RewriteRule ^ - [L]

    # =========================================================================
    # ALLOW DIRECT ACCESS TO EXISTING FILES (CSS, JS, images, fonts, etc.)
    # =========================================================================
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # =========================================================================
    # ALLOW DIRECT ACCESS TO EXISTING DIRECTORIES
    # =========================================================================
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # =========================================================================
    # EXPLICIT PHP FILE ACCESS (install, admin pages)
    # =========================================================================
    RewriteRule ^install\.php$ install.php [L]
    RewriteRule ^setup-wizard\.php$ setup-wizard.php [L]
    RewriteRule ^health-dashboard\.php$ health-dashboard.php [L]
    RewriteRule ^settings\.php$ settings.php [L]
    RewriteRule ^analytics\.php$ analytics.php [L]
    RewriteRule ^cron-manager\.php$ cron-manager.php [L]
    RewriteRule ^admin-users\.php$ admin-users.php [L]
    RewriteRule ^admin-domains\.php$ admin-domains.php [L]

    # =========================================================================
    # API ROUTING - Send /api/* to router.php
    # =========================================================================
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteCond %{REQUEST_URI} !/api/router\.php$
    RewriteRule ^api/(.*)$ api/router.php [L,QSA]

    # =========================================================================
    # SPA FALLBACK - Everything else serves index.html
    # =========================================================================
    # Skip if already index.html
    RewriteCond %{REQUEST_URI} !/index\.html$
    # Skip API paths (already handled above, but extra safety)
    RewriteCond %{REQUEST_URI} !^/api/
    # Skip PHP files
    RewriteCond %{REQUEST_URI} !\.php$
    # Serve index.html for SPA routes
    RewriteRule ^ index.html [L]
</IfModule>

# =========================================================================
# GZIP COMPRESSION
# =========================================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# =========================================================================
# CACHE STATIC ASSETS
# =========================================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# =========================================================================
# SECURITY HEADERS
# =========================================================================
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# =========================================================================
# DENY ACCESS TO HIDDEN FILES (e.g., .git, .env, .install_lock)
# =========================================================================
<FilesMatch "^\.">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# =========================================================================
# DENY ACCESS TO SENSITIVE FILE TYPES
# =========================================================================
<FilesMatch "\.(sql|md|json|lock|env|log)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# =========================================================================
# DIRECTORY OPTIONS
# =========================================================================
Options -Indexes
